@model Web.Models.UsuarioLogin

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">


    <style>
        body {
            height: 100vh;
            width: 100vw;
            background-image: url(background.jpeg);
            background-size: cover;
            margin: 0;
        }

        main {
            color: aliceblue;
            max-width: 500px !important;
            height: 100vh !important;
            display: flex !important;
            flex-direction: column !important;
            justify-content: center;
        }

        .div-glass {
            padding: 50px;
            background: rgba(99, 99, 99, 0.5);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
            border: 1px solid rgba(99, 99, 99, 0.5);
        }

        .title{
            display: flex;
            flex-direction: column;
            align-items:center;
            padding-bottom: 2em;
        }

        .image{
            width: 100px;
            height: 100px;
        }

        .input-glass {
            background: rgba(255, 255, 255, 0.15);
            /*border-radius: 16px;*/
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.17);
        }
        .input-glass:focus{
            background: rgba(255, 255, 255, 0.5);
        }


    </style>
</head>
<body>

    <main class="container-sm">
        <div class="div-glass">
            <div class="title">
                <img class="image" src="~/chef2.png"/>
                <h1>Recetario</h1>
                <h4>Identificarse</h4>
            </div>

            <form asp-controller="Login" asp-action="Login">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="email@example.com"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Clave" class="form-label">Contraseña</label>
                    <input asp-for="Clave" class="form-control" type="password" placeholder="password"/>
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                 No tenes cuenta?
                 <a asp-action="CreateUser">Registrate!</a>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-secondary">
                    <i class="bi bi-box-arrow-in-right"></i>
                        Ingresar
                    </button>
                </div>
          </form>
            </div>


    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
