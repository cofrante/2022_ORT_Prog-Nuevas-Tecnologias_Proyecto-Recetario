@{
    ViewData["Title"] = "Buscador de Receta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buscador de Receta</h1>
<div>
  <form asp-action="Index">
      <select class="selectpicker show-menu-arrow" 
            data-style="form-control" 
            data-live-search="true" 
            title="-- Ingredientes --"
            multiple="multiple"
            asp-items="ViewBag.Ingredientes" id="ingredientes" name="ingredientes">
       </select>
        @*<a onclick= "buscarReceta()" class="btn btn-primary" > Buscar</a>*@
        <input type="submit" value="Buscar" class="btn btn-primary" />
   </form>
</div>

<script>  /* Multiple Item Picker */
  $('.selectpicker').selectpicker({
    style: 'btn-default'
  });
  </script>